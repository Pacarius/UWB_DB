<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_row="2"
    android:layout_column="2"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="355dp"
        android:layout_height="431dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/liveMapButton"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/googlemap"
                android:backgroundTint="@color/black"
                android:text="@string/live_map"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bookingButton"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/index"
                android:backgroundTint="@color/black"
                android:text="@string/booking"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/vehicleInfoButton"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/themercedesgla"
                android:backgroundTint="@color/black"
                android:text="@string/vehicleinfo"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/settingsButton"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/cog"
                android:backgroundTint="@color/black"
                android:text="@string/settings"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>